<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">




    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#40009688"
        android:id="@+id/rl4"
        android:visibility="visible"
        >


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#3CE8D2D2"
            android:id="@+id/rl5"
            >


            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:layout_marginTop="120dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                app:cardCornerRadius="20dp"
                android:id="@+id/card"
                >


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/rl6"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#000"
                        android:text="Sign In"
                        android:textSize="30dp"
                        android:textStyle="bold"
                        android:layout_marginTop="20dp"
                        android:id="@+id/sign1"
                        android:layout_centerHorizontal="true"
                        />

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:hint="  Enter Email"
                        android:layout_below="@+id/sign1"
                        android:textColor="#000"
                        android:textSize="15dp"
                        android:drawableLeft="@drawable/mail"
                        android:inputType="textEmailAddress"
                        android:paddingLeft="20dp"
                        android:drawablePadding="10dp"
                        android:background="@drawable/border"
                        android:layout_margin="20dp"
                        android:id="@+id/email"
                        />

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:hint=" Password (Eg.User@123)"
                        android:layout_below="@+id/email"
                        android:textColor="#000"
                        android:textSize="15dp"
                        android:drawableLeft="@drawable/password"
                        android:inputType="textPassword"
                        android:paddingLeft="20dp"
                        android:maxLength="8"
                        android:background="@drawable/border"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:layout_marginBottom="25dp"
                        android:id="@+id/pass"
                        android:drawablePadding="10dp"
                        />

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Sign In"
                        android:backgroundTint="@color/teal_700"
                        android:textColor="#fff"
                        android:textSize="20dp"
                        android:layout_below="@+id/pass"
                        android:layout_centerInParent="true"
                        android:paddingLeft="100dp"
                        android:paddingRight="100dp"
                        android:paddingTop="10dp"
                        android:paddingBottom="10dp"
                        android:textAllCaps="false"

                        android:id="@+id/signin2"
                        />


                </RelativeLayout>

            </androidx.cardview.widget.CardView>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Don't have an account? Sign Up"
                android:textColor="#4E4C4C"
                android:layout_marginTop="20dp"
                android:textSize="15dp"
                android:layout_below="@+id/card"
                android:layout_centerHorizontal="true"
                android:id="@+id/signin"
                />




        </RelativeLayout>


    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#40009688"
        android:id="@+id/rl7"
        android:visibility="gone"
        >


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#3CE8D2D2"
            android:id="@+id/rl8"
            >

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:background="@drawable/arrow"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:id="@+id/left1"
                />


            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="350dp"
                android:layout_marginTop="120dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                app:cardCornerRadius="20dp"
                android:id="@+id/card1"
                >
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/rl9"
                    >


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#000"
                        android:text="Sign Up"
                        android:textSize="30dp"
                        android:textStyle="bold"
                        android:layout_marginTop="20dp"
                        android:id="@+id/sign2"
                        android:layout_centerHorizontal="true"
                        />

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:hint="  Enter Username"
                        android:layout_below="@+id/sign2"
                        android:textColor="#000"
                        android:textSize="15dp"
                        android:drawableLeft="@drawable/profile"
                        android:inputType="text"
                        android:paddingLeft="20dp"
                        android:drawablePadding="10dp"
                        android:background="@drawable/border"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginBottom="10dp"
                        android:id="@+id/user"
                        />

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:hint="  Enter Email"
                        android:layout_below="@+id/user"
                        android:textColor="#000"
                        android:textSize="15dp"
                        android:drawableLeft="@drawable/mail"
                        android:inputType="textEmailAddress"
                        android:paddingLeft="20dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"
                        android:drawablePadding="10dp"
                        android:background="@drawable/border"
                        android:id="@+id/email1"
                        />

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:hint="  Password (Eg.User@123)"
                        android:layout_below="@+id/email1"
                        android:textColor="#000"
                        android:textSize="15dp"
                        android:drawableLeft="@drawable/password"
                        android:inputType="textPassword"
                        android:paddingLeft="20dp"
                        android:maxLength="8"
                        android:background="@drawable/border"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:layout_marginTop="10dp"
                        android:id="@+id/pass1"
                        android:drawablePadding="10dp"
                        />

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Sign Up"
                       android:backgroundTint="@color/teal_700"
                        android:textColor="#fff"
                        android:textSize="20dp"
                        android:layout_below="@+id/pass1"
                        android:layout_centerInParent="true"
                        android:layout_marginTop="40dp"
                        android:paddingLeft="100dp"
                        android:paddingRight="100dp"
                        android:paddingBottom="10dp"
                        android:paddingTop="10dp"
                        android:textAllCaps="false"
                        android:id="@+id/signup"
                        />



                </RelativeLayout>

            </androidx.cardview.widget.CardView>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/card1"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Already have an account? Sign In"
                    android:textColor="#4E4C4C"
                    android:textSize="15dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="20dp"
                    android:id="@+id/account"
                    />

            </RelativeLayout>

        </RelativeLayout>



    </RelativeLayout>


</RelativeLayout>